{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", "dist", "build", ".vscode/*", ".vitepress"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useNumberNamespace": "off",
				"noUselessElse": { "fix": "unsafe", "level": "error" },
				"useBlockStatements": { "fix": "unsafe", "level": "warn" }
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off",
				"noDoubleEquals": "off",
				"useIsArray": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"nursery": {
				"useImportExtensions": { "fix": "unsafe", "level": "error" },
				"noEmptyBlock": { "level": "error" },
				"noDuplicateElseIf": { "level": "error" },
				"noDuplicateJsonKeys": { "level": "error" }
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	}
}
